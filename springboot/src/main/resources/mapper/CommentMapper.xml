<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.CommentMapper">
    <insert id="add" parameterType="com.example.entity.Comment">
        insert into comment(file_id,score,comment,user_id,time,type) values (#{fileId},#{score},#{comment},#{userId},#{time},#{type})
    </insert>
    <update id="updateById">
        update comment set
        file_id=#{fileId},#{type},score=#{score},comment=#{comment},user_id=#{userId},time=#{time},type=#{type}
        <where>

            id=#{id}
        </where>
    </update>
    <delete id="deleteById">
        delete from comment
        <where> id=#{id} </where>
    </delete>
    <select id="selectAll" resultType="com.example.entity.Comment">
        select comment.*, film.name as filmName from comment
        left join film on comment.film_id=film.id
        <where>
            <if test="filmName !=null">and film.name like concat ('%', #{filmName} ,'%')</if>
        </where>
        order by comment.id desc
    </select>
</mapper>
